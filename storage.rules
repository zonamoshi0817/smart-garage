rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function hasValidMetadata() {
      // 書き込み時: カスタムメタデータのownerUidがリクエストユーザーと一致
      // customMetadataが存在し、ownerUidが設定されていることを確認
      return request.resource.metadata != null 
        && request.resource.metadata.customMetadata != null
        && request.resource.metadata.customMetadata.ownerUid == request.auth.uid;
    }
    
    function isImageFile() {
      return request.resource.contentType != null 
        && request.resource.contentType.matches('image/.*');
    }
    
    function isValidImageSize() {
      // 画像サイズ制限: 10MB
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    function isAllowedImageType() {
      // 許可される画像タイプ
      return request.resource.contentType != null 
        && request.resource.contentType.matches('image/(jpeg|jpg|png|webp|heic)');
    }
    
    // Private evidences: オーナーのみアクセス可能
    match /private/users/{userId}/{allPaths=**} {
      allow read, write: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // Users can only access their own files (既存パス)
    match /users/{userId}/{allPaths=**} {
      // 読み取り: パス内のuserIdが自分
      allow read: if isOwner(userId);
      
      // 書き込み: パス内のuserIdが自分 かつ メタデータのownerUidも一致
      // かつ 画像ファイルで、サイズ制限とタイプ制限を満たす
      // 段階的に条件を追加: まずは基本的な画像チェックから
      allow write: if isOwner(userId) 
                   && isImageFile()
                   && isValidImageSize()
                   && isAllowedImageType();
      
      // 削除: パス内のuserIdが自分
      allow delete: if isOwner(userId);
    }
    
    // Public masked evidences: 公開ページから読み取り可能
    match /public/sales/{saleProfileId}/{fileName} {
      // 読み取り: saleProfileのvisibilityがpublicまたはunlistedの場合のみ
      allow read: if firestore.get(/databases/(default)/documents/saleProfiles/$(saleProfileId)).data.visibility in ['public', 'unlisted'];
      // 書き込み: オーナーのみ
      allow write: if isAuthenticated()
                   && firestore.get(/databases/(default)/documents/saleProfiles/$(saleProfileId)).data.ownerUid == request.auth.uid
                   && hasValidMetadata()
                   && isImageFile()
                   && isValidImageSize()
                   && isAllowedImageType();
      // 削除: オーナーのみ
      allow delete: if isAuthenticated()
                    && firestore.get(/databases/(default)/documents/saleProfiles/$(saleProfileId)).data.ownerUid == request.auth.uid;
    }
    
    // SNS共有用ギャラリー画像: 公開ページから読み取り可能
    match /share/{shareProfileId}/gallery/{fileName} {
      // 読み取り: オーナーは常に読み取り可能（編集ページで表示するため）
      // または、shareProfileがactiveかつvisibilityがdisabledでない場合のみ（未ログインでも可）
      // statusフィールドが存在しない場合は後方互換性のため許可
      allow read: if (isAuthenticated() 
                       && firestore.get(/databases/(default)/documents/saleProfiles/$(shareProfileId)).data.ownerUid == request.auth.uid)
                   || (firestore.get(/databases/(default)/documents/saleProfiles/$(shareProfileId)).data.visibility != 'disabled'
                       && (firestore.get(/databases/(default)/documents/saleProfiles/$(shareProfileId)).data.status == 'active'
                           || !('status' in firestore.get(/databases/(default)/documents/saleProfiles/$(shareProfileId)).data)));
      // 書き込み: オーナーのみ（オーナーであれば常に許可）
      // hasValidMetadata()チェックを一時的に削除してデバッグ
      allow write: if isAuthenticated()
                   && firestore.get(/databases/(default)/documents/saleProfiles/$(shareProfileId)).data.ownerUid == request.auth.uid
                   && isImageFile()
                   && isValidImageSize()
                   && isAllowedImageType();
      // 削除: オーナーのみ
      allow delete: if isAuthenticated()
                    && firestore.get(/databases/(default)/documents/saleProfiles/$(shareProfileId)).data.ownerUid == request.auth.uid;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

