rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function: Check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function: Check if user owns the resource
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Helper: check owner fields in a document snapshot
    function isOwnerDoc(data, userId) {
      return (data.ownerUid != null && data.ownerUid == userId)
          || (data.userId != null && data.userId == userId);
    }

    // Helper: check owner fields in request.resource data
    function matchesOwner(reqData, userId) {
      return (reqData.ownerUid != null && reqData.ownerUid == userId)
          || (reqData.userId != null && reqData.userId == userId);
    }
    
    // Helper function: Validate required fields exist
    function hasRequiredFields(fields) {
      return request.resource.data.keys().hasAll(fields);
    }
    
    // Helper function: Check data size limit
    function isWithinSizeLimit(maxSize) {
      return request.resource.size() < maxSize;
    }
    
    // Helper function: Validate timestamp is reasonable (not too far in past/future)
    function isReasonableTimestamp(ts) {
      let now = request.time.toMillis();
      let tsMillis = ts.toMillis();
      // Allow 1 year in past, 1 day in future
      return tsMillis > now - 365 * 24 * 60 * 60 * 1000 
          && tsMillis < now + 24 * 60 * 60 * 1000;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId) 
                    && hasRequiredFields(['createdAt'])
                    && isWithinSizeLimit(1000000); // 1MB
      allow update: if isOwner(userId) 
                    && isWithinSizeLimit(1000000);
      
      // Cars subcollection
      match /cars/{carId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId) 
                      && hasRequiredFields(['name', 'userId', 'createdAt'])
                      && request.resource.data.name is string
                      && request.resource.data.name.size() > 0
                      && request.resource.data.name.size() < 100
                      && isWithinSizeLimit(100000); // 100KB
        allow update: if isOwner(userId)
                      && request.resource.data.userId == userId
                      && isWithinSizeLimit(100000);
        allow delete: if isOwner(userId);
        
        // Customizations nested under cars
        match /customizations/{customizationId} {
          allow read, write: if isOwner(userId);
        }
        
        // Customization meta subcollection
        match /customizations_meta/{metaId} {
          allow read, write: if isOwner(userId);
        }
      }
      
      // Maintenance records subcollection
      match /maintenance/{maintenanceId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId)
                      && hasRequiredFields(['title', 'carId', 'userId', 'createdAt'])
                      && request.resource.data.title is string
                      && request.resource.data.title.size() > 0
                      && request.resource.data.title.size() < 200
                      && isWithinSizeLimit(500000); // 500KB
        allow update: if isOwner(userId)
                      && request.resource.data.userId == userId
                      && isWithinSizeLimit(500000);
        allow delete: if isOwner(userId);
      }
      
      // Fuel logs subcollection
      match /fuelLogs/{fuelLogId} {
        // シンプルなルール: パスベースのオーナーチェックのみ
        allow read, write: if isOwner(userId);
      }
      
      // Customizations subcollection
      match /customizations/{customizationId} {
        allow read, write: if isOwner(userId);
      }
      
      // Insurance policies subcollection
      match /policies/{policyId} {
        allow read, write: if isOwner(userId);
      }
      
      // Insurance claims subcollection
      match /claims/{claimId} {
        allow read, write: if isOwner(userId);
      }
      
      // Insurance notifications subcollection
      match /insuranceNotifications/{notificationId} {
        allow read, write: if isOwner(userId);
      }
      
      // Analytics events subcollection
      match /analyticsEvents/{eventId} {
        allow read, write: if isOwner(userId);
      }
      
      // Audit logs subcollection
      match /auditLogs/{logId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId)
                      && hasRequiredFields(['entityType', 'entityId', 'action', 'actorUid'])
                      && request.resource.data.actorUid == userId;
      }
    }
    
    // Audit logs collection (admin only, or user can read their own)
    match /auditLogs/{logId} {
      allow read: if isSignedIn() && resource.data.actorUid == request.auth.uid;
      allow write: if false; // Only via server-side SDK
    }
    
    // Cars collection (top-level, for compatibility)
    match /cars/{carId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn()
                    && hasRequiredFields(['name', 'userId', 'createdAt'])
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.name is string
                    && request.resource.data.name.size() > 0
                    && isWithinSizeLimit(100000);
      allow update: if isSignedIn()
                    && resource.data.userId == request.auth.uid
                    && request.resource.data.userId == request.auth.uid
                    && isWithinSizeLimit(100000);
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    
    // Maintenance collection (top-level, for compatibility)
    match /maintenance/{maintenanceId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn()
                    && hasRequiredFields(['title', 'carId', 'userId', 'createdAt'])
                    && request.resource.data.userId == request.auth.uid
                    && isWithinSizeLimit(500000);
      allow update: if isSignedIn()
                    && resource.data.userId == request.auth.uid
                    && request.resource.data.userId == request.auth.uid
                    && isWithinSizeLimit(500000);
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    
    // Fuel logs collection (top-level, for compatibility) - DEPRECATED
    // 新規データはすべて users/{userId}/fuelLogs に保存されます
    match /fuelLogs/{fuelLogId} {
      allow read: if isSignedIn() && (resource.data.ownerUid == request.auth.uid || resource.data.userId == request.auth.uid);
      allow write: if isSignedIn() && (request.resource.data.ownerUid == request.auth.uid || request.resource.data.userId == request.auth.uid);
    }
    
    // Customizations collection (top-level)
    match /customizations/{customizationId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn()
                    && hasRequiredFields(['carId', 'userId'])
                    && request.resource.data.userId == request.auth.uid
                    && isWithinSizeLimit(100000);
      allow update: if isSignedIn()
                    && resource.data.userId == request.auth.uid
                    && request.resource.data.userId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    
    // Sale Profiles collection (公開ページ用)
    match /saleProfiles/{saleProfileId} {
      // 公開読み取り: visibilityがpublicまたはunlistedの場合のみ、またはオーナーは常に読み取り可能
      allow read: if resource.data.visibility in ['public', 'unlisted']
                  || (isSignedIn() && resource.data.ownerUid == request.auth.uid);
      // クエリ（list）: オーナーは自分のsaleProfilesを検索可能
      allow list: if isSignedIn();
      // 作成・更新・削除: オーナーのみ
      allow create: if isSignedIn() 
                    && (request.resource.data.ownerUid == request.auth.uid);
      allow update, delete: if isSignedIn() 
                            && resource.data.ownerUid == request.auth.uid
                            && request.resource.data.ownerUid == request.auth.uid;
    }
    
    // Evidences collection (証跡)
    match /evidences/{evidenceId} {
      // 読み取り: オーナーのみ（公開ページでは直接読み取らせない方針）
      allow read: if isSignedIn() && resource.data.ownerUid == request.auth.uid;
      // クエリ（list）: 認証済みユーザーのみ許可
      // 注意: クライアント側でwhere('ownerUid', '==', ...)でフィルタリングすることで、
      // ユーザーが所有するevidencesのみを取得する
      // Firestore Rulesではクエリのwhere条件を直接検証できないため、
      // クライアント側で適切にフィルタリングする必要がある
      allow list: if isSignedIn();
      // 作成・更新・削除: オーナーのみ
      allow create: if isSignedIn() 
                    && (request.resource.data.ownerUid == request.auth.uid);
      allow update, delete: if isSignedIn() 
                            && resource.data.ownerUid == request.auth.uid;
    }
    
    // Sale Page Views collection (アナリティクス)
    match /salePageViews/{viewId} {
      // 作成: 誰でも可能（公開ページからのアクセス）
      allow create: if true;
      // 個別読み取り: saleProfileのownerのみ（閲覧分析はオーナーのみ）
      allow read: if isSignedIn() 
                  && resource.data.saleProfileId != null
                  && firestore.get(/databases/$(database)/documents/saleProfiles/$(resource.data.saleProfileId)).data.ownerUid == request.auth.uid;
      // クエリ（list）: 認証済みユーザーのみ許可
      // 注意: クライアント側でwhere('saleProfileId', '==', ...)でフィルタリングすることで、
      // ユーザーが所有するsaleProfileのデータのみを取得する
      // Firestore Rulesではクエリのwhere条件を直接検証できないため、
      // クライアント側で適切にフィルタリングする必要がある
      allow list: if isSignedIn();
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

